<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomTabLayout">
        <attr name="tab_Mode" format="enum">
            <enum name="mode_fixed" value="1" />
            <enum name="mode_scrollable" value="2" />
        </attr>
        <attr name="tabSelectTextColor" format="color" />
        <attr name="tabTextColor" format="color" />
        <attr name="tabTextBold" format="boolean" />
        <attr name="tabIndicatorHeight" format="dimension" />
        <attr name="tabIndicatorWidth" format="dimension" />
        <attr name="tabIndicatorDrawable" format="reference" />
        <attr name="tabIndicatorMarginTop" format="dimension" />
        <attr name="tabTextSizeDP" format="integer" />
        <attr name="tabSelectedBold" format="boolean" />
        <!--Tab附加信息（个数）-->
        <attr name="tabIsShowBadge" format="boolean" />
        <attr name="tabBadgeTextSize" format="integer" />
        <!--未读标记属性需要tabIsShowUnRead 与 tabUnReadDrawable 配套使用-->
        <attr name="tabUnReadDrawable" format="reference" />
        <attr name="tabUnReadDrawablePadding" format="dimension" />
    </declare-styleable>


    <declare-styleable name="BannerIndicator">
        <!--指示器之间的间隙-->
        <attr name="gap" format="dimension" />
        <!--指示器的宽度-->
        <attr name="slider_width" format="dimension" />
        <!--指示器的高度-->
        <attr name="slider_height" format="dimension" />
        <!--指示器大小变化方向-->
        <attr name="sleider_align">
            <enum name="Left" value="1" />
            <enum name="Center" value="0" />
            <enum name="Right" value="2" />
        </attr>
    </declare-styleable>
</resources>