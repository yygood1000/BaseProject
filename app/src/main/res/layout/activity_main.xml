<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFcccc"
        android:orientation="vertical"
        tools:context="com.yangy.baseproject.ui.activity.MainActivity">

        <Button
            android:id="@+id/btn_jump"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activity跳转与返回" />

        <Button
            android:id="@+id/btn_fragment_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FragmentActivity使用" />

        <Button
            android:id="@+id/btn_matrix_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MatrixActivity" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>